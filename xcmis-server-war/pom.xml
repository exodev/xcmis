<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <groupId>org.xcmis</groupId>
      <artifactId>xcmis-parent</artifactId>
      <version>1.3.0-SNAPSHOT</version>
   </parent>
   <artifactId>xcmis-server-war</artifactId>
   <packaging>war</packaging>
   <name>xCMIS :: Server :: WAR</name>
   <dependencies>
      <dependency>
         <groupId>org.xcmis</groupId>
         <artifactId>xcmis-spi</artifactId>
      </dependency>
      <dependency>
         <groupId>org.slf4j</groupId>
         <artifactId>slf4j-log4j12</artifactId>
         <scope>runtime</scope>
      </dependency>
      <dependency>
         <groupId>javax.servlet</groupId>
         <artifactId>servlet-api</artifactId>
         <scope>provided</scope>
      </dependency>
   </dependencies>
   <profiles>
      <profile>
         <id>all</id>
         <activation>
            <activeByDefault>true</activeByDefault>
         </activation>
         <dependencies>
            <dependency>
               <groupId>org.xcmis</groupId>
               <artifactId>xcmis-sp-inmemory</artifactId>
               <scope>runtime</scope>
            </dependency>
            <dependency>
               <groupId>org.xcmis</groupId>
               <artifactId>xcmis-renditions</artifactId>
               <scope>runtime</scope>
            </dependency>
            <!-- rest atom -->
            <dependency>
               <groupId>org.xcmis</groupId>
               <artifactId>xcmis-restatom</artifactId>
               <scope>runtime</scope>
            </dependency>
            <dependency>
               <groupId>org.everrest</groupId>
               <artifactId>everrest-core</artifactId>
               <scope>runtime</scope>
            </dependency>
            <dependency>
               <groupId>javax.xml.bind</groupId>
               <artifactId>jaxb-api</artifactId>
               <exclusions>
                  <exclusion>
                     <groupId>javax.xml.stream</groupId>
                     <artifactId>stax-api</artifactId>
                  </exclusion>
               </exclusions>
               <scope>runtime</scope>
            </dependency>
            <!-- ws -->
            <dependency>
               <groupId>org.xcmis</groupId>
               <artifactId>xcmis-wssoap</artifactId>
               <scope>runtime</scope>
            </dependency>
         </dependencies>
         <build>
            <resources>
               <resource>
                  <directory>src/main/resources</directory>
                  <includes>
                     <include>**/org.xcmis.CmisRegistryFactory</include>
                  </includes>
               </resource>
            </resources>
            <finalName>xcmis</finalName>
            <plugins>

           
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-war-plugin</artifactId>
                  <configuration>
                     <!--
                     *** DO NOT REMOVE OR SET TO FALSE ***
                     Need pack in jar and put in WEB-INF/lib instead WEB-INF/classes!!!
                     Otherwise will be not able found CmisRegistryFactory name in file
                     META-INF/services/xcmis/org.xcmis.CmisRegistryFactory
                     -->
                     <archiveClasses>true</archiveClasses>
                     
                     <webXml>${project.basedir}/src/main/webapp/WEB-INF/web-all.xml</webXml>
                     <warSourceExcludes>
                        **/servlet-api-*.jar,
                        **/geronimo-stax-api_*.jar,
                        **/geronimo-activation_*.jar,
                        **/geronimo-annotation_*.jar,
                        **/geronimo-javamail_*.jar,
                        **/geronimo-servlet_*.jar,
                        **/cxf-rt-databinding-aegis-*.jar,
                        **/cxf-rt-javascript-*.jar,
                        **/cxf-rt-transports-local-*.jar,
                        **/cxf-rt-transports-http-jetty-*.jar,
                        **/cxf-tools-java2ws-*.jar,
                        **/cxf-tools-validator-*.jar,
                        **/cxf-tools-wsdlto-frontend-jaxws-*.jar,
                        **/xercesImpl-*.jar,
                        **/wstx-asl-*.jar,
                        **/spring-*.jar,
                        **/velocity-*.jar,
                        **/velocity-dep-*.jar,
                        **/xbean-*.jar,
                        **/jetty-*.jar,
                        **/jetty-util-*.jar,
                        **/xml-apis-*.jar,
                        **/stax-stax-api-*.jar,
                     </warSourceExcludes>
                     <archive>
                        <manifest>
                           <addClasspath>true</addClasspath>
                           <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                           <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                           <Date>${maven.build.timestamp}</Date>
                           <Implementation-URL>${project.url}</Implementation-URL>
                           <SCM-URL>${project.scm.connection}</SCM-URL>
                           <SCM-Revision>${exo.product.scm.revision}</SCM-Revision>
                           <Specification-Title>${exo.product.name}</Specification-Title>
                           <Specification-Version>${project.version}</Specification-Version>
                           <Specification-Vendor>${project.organization.name}</Specification-Vendor>
                           <Implementation-Title>${project.name}</Implementation-Title>
                           <Implementation-Version>${project.version}</Implementation-Version>
                           <Implementation-Vendor>${project.organization.name}</Implementation-Vendor>
                        </manifestEntries>
                     </archive>
                  </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
      <profile>
         <id>restatom</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         <dependencies>
            <dependency>
               <groupId>org.xcmis</groupId>
